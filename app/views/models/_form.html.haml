= form_for @model do |f|
  - if @model.errors.any?
    #error_explanation
      %h2= "#{pluralize(@model.errors.count, "error")} prohibited this model from being saved:"
      %ul
        - @model.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :User
    = f.text_field :User
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .actions
    %button.btn.waves-effect.waves-light{:name => "submit", :type => "submit"}
      Save
      %i.material-icons.right save
